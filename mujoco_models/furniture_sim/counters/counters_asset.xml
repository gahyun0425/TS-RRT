<mujocoinclude>
    <compiler inertiafromgeom="auto" inertiagrouprange="4 4" angle="radian"/>

    <asset>
        <!-- 경로 정정 + 스케일로 전체 축소 (예: 20% 축소 => 0.0008) -->
        <mesh file="meshes/cabinetdrawer.stl"  name="cabinetdrawer"  scale="0.0008 0.0008 0.0008"/>
        <mesh file="meshes/cabinethandle.stl"  name="cabinethandle"  scale="0.0008 0.0008 0.0008"/>
        <mesh file="meshes/cabinetbase.stl"    name="cabinetbase"    scale="0.0008 0.0008 0.0008"/>
        <mesh file="meshes/countertop.stl"     name="countertop"     scale="0.0008 0.0008 0.0008"/>
        <mesh file="meshes/faucet.stl"         name="faucet"         scale="0.0008 0.0008 0.0008"/>

        <!-- bimanual.xml의 texturedir="furniture_sim" 기준 -->
        <texture name="T_counter_metal"  type="cube" height="1" width="1" file="common/textures/stone1.png"/>
        <texture name="T_counter_body"  type="cube" height="1" width="1" file="common/textures/stone2.png"/>

        <texture name="T_counter_marble" type="cube" height="1" width="1" file="common/textures/wood1.png"/>
        <texture name="T_counter_wood"   type="cube" height="2" width="2" file="common/textures/metal0.png"/>

        <material name="counter_metal" rgba="1 1 1 1" texture="T_counter_metal"  texrepeat="3 3" reflectance=".5" shininess="1" texuniform="false"/>
        <material name="counter_marble"        texture="T_counter_marble"        texrepeat="1 1" reflectance=".2" shininess="1" texuniform="false"/>
        <material name="counter_black" rgba=".2 .2 .2 1" texture="T_counter_body" reflectance="1" shininess="1"/>
        <material name="counter_blue"  texture="T_counter_wood" rgba="1 1 1 1"   reflectance="1" shininess="1" texuniform="false"/>
        <material name="counter_collision_blue" rgba="0.3 0.3 1.0 0.5" shininess="0" specular="0"/>
    </asset>

    <default>
        <default class="counters">
            <joint damping="2" frictionloss="2" armature=".01" limited="true"/>
            <geom conaffinity="0" contype="0" group="1" material="counter_metal" type="mesh"/>
            <default class="counter_collision">
                <geom conaffinity="1" condim="3" contype="0" group="4" margin="0.001" material="counter_collision_blue"/>
            </default>
        </default>
    </default>
</mujocoinclude>
